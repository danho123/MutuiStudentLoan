<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingRight="@dimen/default_gap"
    tools:context=".SummaryActivity" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/default_gap" >

            <ImageView
                android:id="@+id/imageView_edit_btn"
                style="@style/summaryButtons_land"
                android:src="@drawable/edit_blue" />

            <ImageView
                android:id="@+id/imageView_graph_btn"
                style="@style/summaryButtons_land"
                android:src="@drawable/graph_blue" />

            <ImageView
                android:id="@+id/imageView_delete_btn"
                style="@style/summaryButtons_land"
                android:src="@drawable/trash_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_gap"
                android:layout_marginTop="@dimen/default_gap"
                android:background="@drawable/lines"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/summary_textview_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />
            </LinearLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/default_gap" >

                <ViewSwitcher
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/summary_viewswitcher"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    android:paddingLeft="@dimen/default_gap" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_description"
                                style="@style/summaryFields"
                                android:text="Description"/>

                            <TextView
                                android:id="@+id/summary_textview_description"
                                style="@style/summaryFields_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_msrp"
                                style="@style/summaryFields"
                                android:text="MSRP ($)" />

                            <TextView
                                android:id="@+id/summary_textview_price"
                                style="@style/summaryFields_content"
                                android:text="Placeholder" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0" >

                            <TextView
                                android:id="@+id/summary_label_term"
                                style="@style/summaryFields"
                                android:text="Terms (Month)"/>

                            <TextView
                                android:id="@+id/summary_textview_term"
                                style="@style/summaryFields_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_interest"
                                style="@style/summaryFields"
                                android:text="Interest (%)"/>

                            <TextView
                                android:id="@+id/summary_textview_interest"
                                style="@style/summaryFields_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_tax"
                                style="@style/summaryFields"
                                android:text="Tax (%)"/>

                            <TextView
                                android:id="@+id/summary_textview_tax"
                                style="@style/summaryFields_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_discount"
                                style="@style/summaryFields"
                                android:text="Downpayment (%)"/>

                            <TextView
                                android:id="@+id/summary_textview_discount"
                                style="@style/summaryFields_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_fees"
                                style="@style/summaryFields"
                                android:text="Fees ($)"/>

                            <TextView
                                android:id="@+id/summary_textview_fees"
                                style="@style/summaryFields_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_description1"
                                style="@style/summaryFields"
                                android:text="Description" />

                            <EditText
                                android:id="@+id/summary_edittext_description"
                                style="@style/summaryInputs" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_msrp1"
                                style="@style/summaryFields"
                                android:text="MSRP ($)"/>

                            <EditText
                                android:id="@+id/summary_edittext_price"
                                style="@style/summaryInputs"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_term1"
                                style="@style/summaryFields"
                                android:text="Terms (Month)"/>

                            <EditText
                                android:id="@+id/summary_edittext_term"
                                style="@style/summaryInputs"
                                android:inputType="number" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_interest1"
                                style="@style/summaryFields"
                                android:text="Interest (%)"/>

                            <EditText
                                android:id="@+id/summary_edittext_interest"
                                style="@style/summaryInputs"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_tax1"
                                style="@style/summaryFields"
                                android:text="Tax (%)" />

                            <EditText
                                android:id="@+id/summary_edittext_tax"
                                style="@style/summaryInputs"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_discount1"
                                style="@style/summaryFields"
                                android:text="Downpayment ($)"/>

                            <EditText
                                android:id="@+id/summary_edittext_discount"
                                style="@style/summaryInputs"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/summary_label_fees1"
                                style="@style/summaryFields"
                                android:text="Fees ($)"/>

                            <EditText
                                android:id="@+id/summary_edittext_fees"
                                style="@style/summaryInputs"
                                android:inputType="numberDecimal" />
                        </LinearLayout>
                    </LinearLayout>
                </ViewSwitcher>
            </ScrollView>

        </LinearLayout>

</LinearLayout>