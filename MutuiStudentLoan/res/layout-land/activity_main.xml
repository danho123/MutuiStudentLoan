    <ViewSwitcher
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_viewswitcher"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filler" />

            <ImageView
                android:id="@+id/main_imageview_calculator"
                style="@style/mainBtns_land"
                android:onClick="onClick_calculator"
                android:src="@drawable/calculator_blue" />

            <ImageView
                android:id="@+id/main_imageview_cars"
                style="@style/mainBtns_land"
                android:onClick="onClick_cars"
                android:src="@drawable/car_blue" />

            <ImageView
                android:id="@+id/main_imageview_economy"
                style="@style/mainBtns_land"
                android:onClick="onClick_economy"
                android:src="@drawable/fuel_blue" />

            <ImageView
                android:id="@+id/main_imageview_settings"
                style="@style/mainBtns_land"
                android:onClick="onClick_settings"
                android:src="@drawable/setting_blue" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filler" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView_carList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </ViewSwitcher>

    <Button
        android:id="@+id/button_addCar"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@color/gray"
        android:onClick="onClick_addCar"
        android:text="clear"
        android:textColor="@color/white" />

    <!-- </LinearLayout> -->

</LinearLayout>
