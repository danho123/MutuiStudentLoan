<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingLeft="@dimen/default_gap"
    android:paddingRight="@dimen/default_gap"
    tools:context=".SummaryActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_gap" >

        <ImageView
            android:id="@+id/summary_imageview_edit"
            style="@style/summaryButtons"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:onClick="onClick_edit"
            android:src="@drawable/edit_blue" />

        <ImageView
            android:id="@+id/summary_imageview_amortization"
            style="@style/summaryButtons"
            android:onClick="onClick_amortization"
            android:src="@drawable/graph_blue" />

        <ImageView
            android:id="@+id/summary_imageview_delete"
            style="@style/summaryButtons"
            android:scaleType="fitStart"
            android:onClick="onClick_delete"
            android:src="@drawable/trash_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/default_gap"
        android:layout_marginTop="@dimen/default_gap"
        android:background="@drawable/lines"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/summary_textview_payment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

    </LinearLayout>
       <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
    
    <ViewSwitcher
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/summary_viewswitcher"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:paddingLeft="@dimen/default_gap" >

        <!--  START SUMMARY MODE -->

 
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/summary_label_description"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Description"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    
                    <TextView
                        android:id="@+id/summary_textview_description"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/summary_label_msrp"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="MSRP ($)"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/summary_textview_price"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Placeholder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" >

                    <TextView
                        android:id="@+id/summary_label_term"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Terms (Month)"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/summary_textview_term"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/summary_label_interest"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Interest (%)"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/summary_textview_interest"
                         style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/summary_label_tax"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Tax (%)"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/summary_textview_tax"
                         style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/summary_label_discount"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Downpayment (%)"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/summary_textview_discount"
                         style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4" />
                </LinearLayout>
                
                <!--  SUMMARY FEES -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/summary_label_fees"
                        style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Fees ($)"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/summary_textview_fees"
                         style="@style/summaryFields"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4" />
                </LinearLayout>
           
        </LinearLayout>
            <!--  END SUMMARY MODE -->
        
        <!-- START EDIT MODE -->
  <!--       <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <!-- EDIT DESCRIPTION -->
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/summary_label_description1"
                    style="@style/summaryFields"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Description"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <EditText
                    android:id="@+id/summary_edittext_description"
                    style="@style/summaryInputs"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                     />

            </LinearLayout>

            <!-- EDIT MSRP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/summary_label_msrp1"
                    style="@style/summaryFields"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="MSRP ($)"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/summary_edittext_price"
                    style="@style/summaryInputs"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <!-- EDIT TERMS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/summary_label_term1"
                    style="@style/summaryFields"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Terms (Month)"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/summary_edittext_term"
                    style="@style/summaryInputs"
                    android:layout_height="wrap_content"
                    android:inputType="number" 
                    android:layout_weight="0.4" />
            </LinearLayout>

            <!-- EDIT INTEREST -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/summary_label_interest1"
                    style="@style/summaryFields"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Interest (%)"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/summary_edittext_interest"
                    style="@style/summaryInputs"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" 
                    android:layout_weight="0.4" />
            </LinearLayout>
            
            <!-- EDIT TAX -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/summary_label_tax1"
                    style="@style/summaryFields"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Tax (%)"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/summary_edittext_tax"
                    style="@style/summaryInputs"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" 
                    android:layout_weight="0.4" />
            </LinearLayout>
            
            <!--  EDIT DISCOUNT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/summary_label_discount1"
                    style="@style/summaryFields"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Downpayment ($)"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/summary_edittext_discount"
                    style="@style/summaryInputs"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" 
                    android:layout_weight="0.4" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/summary_label_fees1"
                    style="@style/summaryFields"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Fees ($)"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/summary_edittext_fees"
                    style="@style/summaryInputs"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" 
                    android:layout_weight="0.4" />
            </LinearLayout>    
        </LinearLayout>

       
       <!--  END EDIT MODE -->
    
    </ViewSwitcher>
    </ScrollView>

</LinearLayout>