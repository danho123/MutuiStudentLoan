<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_gap"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/main_imageview_logo"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:paddingBottom="@dimen/default_gap"
        android:paddingTop="@dimen/default_gap"
        android:scaleType="center"
        android:src="@drawable/mutui_logo" />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.35"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/mainBtns_sidefiller"
                    android:src="@drawable/filler" />

                <ImageView
                    android:id="@+id/main_imageview_calculator"
                    style="@style/mainBtns"
                    android:onClick="onClick_calculator"
                    android:src="@drawable/calculator_blue" />

                <ImageView
                    android:id="@+id/main_imageview_cars"
                    style="@style/mainBtns"
                    android:onClick="onClick_cars"
                    android:src="@drawable/car_blue" />

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/mainBtns_sidefiller"
                    android:src="@drawable/filler" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.35"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/mainBtns_sidefiller"
                    android:src="@drawable/filler" />

                <ImageView
                    android:id="@+id/main_imageview_economy"
                    style="@style/mainBtns"
                    android:onClick="onClick_economy"
                    android:src="@drawable/fuel_blue" />

                <ImageView
                    android:id="@+id/main_imageview_settings"
                    style="@style/mainBtns"
                    android:onClick="onClick_settings"
                    android:src="@drawable/setting_blue" />

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/mainBtns_sidefiller"
                    android:src="@drawable/filler" />
            </LinearLayout>


            <ImageView
                android:id="@+id/imageView5"
                style="@style/mainBtns_sidefiller"
                android:src="@drawable/filler" />
        </LinearLayout>

       </LinearLayout>
       </LinearLayout>
