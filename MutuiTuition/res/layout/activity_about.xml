<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_toplevel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/sixteen"
        android:paddingTop="@dimen/twentyeight"
        android:scaleType="center"
        android:src="@drawable/about_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <ImageView
            android:id="@+id/about_imageview_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:onClick="onClick_rate"
            android:padding="16dp"
            android:src="@drawable/rate" />

        <ImageView
            android:id="@+id/about_imageview_web"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:padding="16dp"
            android:onClick="onClick_website"
            android:src="@drawable/www" />

        <ImageView
            android:id="@+id/about_imageview_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:padding="16dp"
            android:onClick="onClick_mutuiCars"
            android:src="@drawable/mutui_cars" />

    </LinearLayout>

</LinearLayout>